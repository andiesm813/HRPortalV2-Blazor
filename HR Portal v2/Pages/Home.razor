@page "/"

<div class="column-layout home-container">
    <div class="column-layout page-content">
        <div class="row-layout header">
            <div class="row-layout group">
                <span class="material-icons icon">
                    home
                </span>
                <h4 class="h4">
                    Home
                </h4>
            </div>
        </div>
        <div class="row-layout content">
            <div class="row-layout group_1">
                <div class="column-layout group_2">
                    <div class="row-layout group_3">
                        <IgbAvatar Src="assets/Avatar6.png" Size="SizableComponentSize.Medium" Shape="AvatarShape.Circle" class="avatar" home-scope></IgbAvatar>
                        <div class="column-layout group_4">
                            <h5 class="content_1">
                                Erin Brockovich
                            </h5>
                            <p class="typography__body-1 content_1">
                                Water quality specialist
                            </p>
                        </div>
                    </div>
                    <div class="row-layout group_5">
                        <div class="column-layout group_6">
                            <p class="typography__subtitle-2 text">
                                Open PTO
                            </p>
                            <span class="material-icons icon_1">
                                date_range
                            </span>
                            <p class="typography__body-2 text_1">
                                8.5 days used (YTD)
                            </p>
                            <p class="typography__caption text_1">
                                1 day scheduled
                            </p>
                        </div>
                        <div class="column-layout group_7">
                            <p class="typography__subtitle-2 text">
                                Bereavement leave
                            </p>
                            <div class="row-layout group_8">
                                <h6 class="content_2">
                                    0.0
                                </h6>
                                <span class="material-icons icon_2">
                                    date_range
                                </span>
                            </div>
                            <p class="typography__body-2 text_1">
                                Days available
                            </p>
                            <p class="typography__caption text_1">
                                0 day scheduled
                            </p>
                        </div>
                    </div>
                    <div class="row-layout group_9">
                        <IgbButton class="button" home-scope>
                            <span class="material-icons">
                                send
                            </span>
                            <span>Request time off</span>
                            <IgbRipple></IgbRipple>
                        </IgbButton>
                        <IgbIconButton Variant="IconButtonVariant.Flat" class="icon-button" home-scope>
                            <span class="material-icons">
                                email
                            </span>
                            <IgbRipple></IgbRipple>
                        </IgbIconButton>
                    </div>
                    <div class="column-layout group_10">
                        <p class="typography__subtitle-2 text_2">
                            What's the buzz
                        </p>
                        <div class="column-layout list_scroll">
                            <IgbList class="list" home-scope>
                                <IgbListItem>
                                    <div slot="start">
                                        <IgbAvatar Src="assets/Avatar3.png" Shape="AvatarShape.Circle" class="avatar_1" home-scope></IgbAvatar>
                                    </div>
                                    <div slot="title">Ethan Hunt</div>
                                    <div slot="subtitle">Birthday, Oct 1</div>
                                    <div slot="end">
                                        <span class="material-icons icon_3">
                                            cake
                                        </span>
                                    </div>
                                </IgbListItem>
                                <IgbListItem>
                                    <div slot="start">
                                        <IgbAvatar Src="assets/Avatar5.png" Shape="AvatarShape.Circle" class="avatar_1" home-scope></IgbAvatar>
                                    </div>
                                    <div slot="title">Luke Skywalker</div>
                                    <div slot="subtitle">25th work-anniversary</div>
                                    <div slot="end">
                                        <span class="material-icons icon_3">
                                            flag
                                        </span>
                                    </div>
                                </IgbListItem>
                                <IgbListItem>
                                    <div slot="start">
                                        <IgbAvatar Src="assets/Avatar1.png" Shape="AvatarShape.Circle" class="avatar_1" home-scope></IgbAvatar>
                                    </div>
                                    <div slot="title">Donnie Darko</div>
                                    <div slot="subtitle">On vacation, Oct 10-23</div>
                                    <div slot="end">
                                        <span class="material-icons icon_3">
                                            beach_access
                                        </span>
                                    </div>
                                </IgbListItem>
                                <IgbListItem>
                                    <div slot="start">
                                        <IgbAvatar Src="assets/Avatar2.png" Shape="AvatarShape.Circle" class="avatar_1" home-scope></IgbAvatar>
                                    </div>
                                    <div slot="title">Edna Mode</div>
                                    <div slot="subtitle">Visiting customer</div>
                                    <div slot="end">
                                        <span class="material-icons icon_3">
                                            airplanemode_active
                                        </span>
                                    </div>
                                </IgbListItem>
                            </IgbList>
                        </div>
                    </div>
                </div>
                <div class="column-layout group_11">
                    <div class="column-layout group_12">
                        <div class="row-layout group_13">
                            <p class="typography__subtitle-2 text_3">
                                What's happening at Rapid Fission Inc.
                            </p>
                            <p class="typography__subtitle-2 text_3">
                                Announcements (1)
                            </p>
                        </div>
                        <IgbList class="list" home-scope>
                            <IgbListItem>
                                <div slot="start">
                                    <IgbAvatar Src="assets/Avatar4.png" Shape="AvatarShape.Circle" class="avatar_1" home-scope></IgbAvatar>
                                </div>
                                <div slot="title">George Bailey posted  an announcement, awards, and call for nominations</div>
                                <div slot="subtitle">19 days ago</div>
                                <div slot="end">
                                    <span class="material-icons icon_3">
                                        clear
                                    </span>
                                </div>
                            </IgbListItem>
                        </IgbList>
                    </div>
                    <div class="column-layout group_14">
                        <div class="row-layout group_15">
                            <p class="typography__subtitle-2 content_2">
                                MY BENEFITS
                            </p>
                        </div>
                    </div>
                    <IgbList class="list" home-scope>
                        <IgbListItem>
                            <div slot="start">
                                <IgbAvatar Shape="AvatarShape.Circle" class="avatar_1" home-scope>
                                    <span class="material-icons">security</span>
                                </IgbAvatar>
                            </div>
                            <div slot="title">Radiation protection health insurance planre</div>
                            <div slot="subtitle">$600 every other week</div>
                        </IgbListItem>
                        <IgbListItem>
                            <div slot="start">
                                <IgbAvatar Shape="AvatarShape.Circle" class="avatar_1" home-scope>
                                    <span class="material-icons">remove_red_eye</span>
                                </IgbAvatar>
                            </div>
                            <div slot="title">20/20 Vision plans here</div>
                            <div slot="subtitle">$234 every other week</div>
                        </IgbListItem>
                        <IgbListItem>
                            <div slot="start">
                                <IgbAvatar Shape="AvatarShape.Circle" class="avatar_1" home-scope>
                                    <span class="material-icons">child_friendly</span>
                                </IgbAvatar>
                            </div>
                            <div slot="title">Child care savings</div>
                            <div slot="subtitle">$4955 remaining</div>
                        </IgbListItem>
                        <IgbListItem>
                            <div slot="start">
                                <IgbAvatar Shape="AvatarShape.Circle" class="avatar_1" home-scope>
                                    <span class="material-icons">security</span>
                                </IgbAvatar>
                            </div>
                            <div slot="title">Fire hazard protection  </div>
                            <div slot="subtitle">On da house!</div>
                        </IgbListItem>
                    </IgbList>
                </div>
            </div>
        </div>
        <div class="row-layout footer">
            <p class="typography__body-2 text_4">
                (c) 2020 Rapid Fission Inc.
            </p>
        </div>
    </div>
</div>

